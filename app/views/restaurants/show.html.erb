<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="card-trip img-position mt-3">
        <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" %>
        <%= link_to restaurants_path, class: "back-position" do %>
          <i class="fa-solid fa-arrow-left text-black"></i>
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2><%= @restaurant.name %></h2>
            <p><%= @restaurant.address %></p>
            <p><%= @restaurant.phone_number %></p>
            <p><%= @restaurant.category %></p>
          </div>
        </div>
        <hr>
        <div class="d-flex flex-column ps-4 pt-1 pb-4">
          <h2 class="mb-2">Reviews</h2>
          <% @restaurant.reviews.each do |review| %>
            <div class="hstack gap-3 p-2">
              <div class="vr"></div>
              <div class="d-flex flex-column">
                <p class="text-secondary-emphasis  mb-2">
                  <% review.rating.times do %>
                    <i class="fa-solid fa-star"></i>
                  <% end %>
                </p>
                <p class="text-secondary-emphasis"><%= review.content %></p>
              </div>
            </div>
          <% end %>
          <div class="p-2">
            <%= render 'reviews/form' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
